<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/colorText"
            android:textSize="@dimen/police" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/colorText"
            android:textSize="@dimen/police" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/colorText"
            android:textSize="@dimen/police" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/colorText"
            android:textSize="@dimen/police" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/colorText"
            android:textSize="@dimen/police" />

        <TextView
            android:id="@+id/tv6"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/colorText"
            android:textSize="@dimen/police" />

        <TextView
            android:id="@+id/tv7"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/colorText"
            android:textSize="@dimen/police" />

        <TextView
            android:id="@+id/tv8"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/colorText"
            android:textSize="@dimen/police" />

        <TextView
            android:id="@+id/tv9"
            android:layout_width="@dimen/size"
            android:layout_height="@dimen/size"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/colorText"
            android:textSize="@dimen/police" />
    </GridLayout>

    <TextView
        android:id="@+id/tvValue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="1"
        android:textSize="22sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/grid"
        app:layout_constraintEnd_toEndOf="@+id/grid"
        app:layout_constraintStart_toStartOf="@+id/grid"
        app:layout_constraintTop_toTopOf="@+id/grid" />
</merge>
